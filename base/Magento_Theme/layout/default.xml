<referenceBlock name="logo">
    <arguments>
        <argument name="logo_file" xsi:type="string">images/logo.svg</argument>
        <argument name="logo_img_width" xsi:type="number">300</argument>
        <argument name="logo_img_height" xsi:type="number">50</argument>
    </arguments>
    <referenceContainer name="header.container">
        <container name="header.banner" htmlTag="div" htmlClass="header-banner" before="-">
            <block class="Magento\Framework\View\Element\Template" name="shipping_policy.free_shipping" template="Magento_Theme::html/free-shipping.phtml" ifconfig="carriers/freeshipping/active"/>
        </container>
    </referenceContainer>
    <referenceContainer name="header.banner">
        <block class="Magento\Framework\View\Element\Template" name="header.banner.block" template="Magento_Theme::html/header-banner.phtml"/>
    </referenceContainer>
    <move element="form.subscribe" destination="main.content" after="-" />
    <move element="form.subscribe" destination="page.bottom.container" before="before.body.end" />
</referenceBlock>
